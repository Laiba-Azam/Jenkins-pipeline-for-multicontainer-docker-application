pipeline {
    agent { 
        node {
            label 'docker-agent'
            }
      }
    triggers {
        pollSCM '* * * * *'
    }
    stages {
        stage('Build') {
            steps {
                echo "Building.."
                sh '''
                run apk add --update docker openrc
                cd applicationcontainer
                docker compose up -d 
                '''
            }
        }
        stage('Test') {
            steps {
                echo "Testing.."
                sh '''
                curl http://10.0.3.40:8001/getuser
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver....'
                sh '''
                echo "doing delivery stuff.."
                '''
            }
        }
    }
}
