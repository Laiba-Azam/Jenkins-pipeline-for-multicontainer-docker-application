pipeline {
    agent any
    triggers {
        pollSCM '*/5 * * * *'
    }
    stages {
        stage('Build') {
            steps {
                echo "Building.. "
                sh '''
                cd applicationcontainer
                docker compose down
                docker compose up -d 
                '''
            }
        }
        stage('Test') {
            steps {
                echo "Testing.."
                sh '''
                sleep 10
                curl -v http://10.0.1.154:8001/getuser
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver....'
                sh '''
                echo "doing delivery stuff.."
                '''
            }
        }
    }
}
